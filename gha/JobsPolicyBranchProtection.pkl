@ModuleInfo { minPklVersion = "0.27.0" }
module JobsPolicyBranchProtection

import "../schemas/GitHubAction.pkl" as gha

import "StepsCommon.pkl"
import "UtilsCommon.pkl"

const function protectBranch(branch: String) = new gha.Job {
  name = "Protect \(branch.capitalize()) Branch"
  steps {
    StepsCommon.checkout(null)
    new {
      name = "Ensure PRs to \(branch) branch are only from allowed branches"
      run = "tools/scripts/ci/protect-\(branch)-branch.sh"
      shell = "bash"
    }
  }
} |> UtilsCommon.standardJobConfig(null, null)
